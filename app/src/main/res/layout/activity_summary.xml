<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- TextView dengan Ringkasan Nutrisi -->
    <TextView
        android:id="@+id/textView"
        android:layout_width="350dp"
        android:layout_height="250dp"
        android:background="@drawable/rounded_corner"
        android:elevation="20dp"
        android:gravity="center_horizontal"
        android:padding="10dp"
        android:text="Ringkasan Nutrisi anda hari ini"
        android:textColor="#FF122E"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/buttonoke"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="200dp"/>

    <!-- Button Oke -->
    <Button
        android:id="@+id/buttonoke"
        android:layout_width="134dp"
        android:layout_height="42dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#FF122E"
        android:text="Oke"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />
</androidx.constraintlayout.widget.ConstraintLayout>
