<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/white">

    <ImageView
        android:id="@+id/imagepage4"
        android:layout_width="382dp"
        android:layout_height="300dp"
        android:src="@drawable/ic_jumlahmakanan"
        android:scaleType="fitXY"/>

    <LinearLayout
        android:id="@+id/linearlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvpageempat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:text="Seberapa banyak nih makan moms hari ini?"
            android:textAlignment="center"
            android:textColor="#FF122E"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <RadioGroup
        android:id="@+id/rgJumlahPorsi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/rbSatu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Satu Porsi" />

        <RadioButton
            android:id="@+id/rbDua"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Setengah Porsi" />

        <RadioButton
            android:id="@+id/rbTiga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Seperempat Porsi" />
    </RadioGroup>

    <Button
        android:id="@+id/BtnSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:layout_gravity="center_horizontal"
        android:text="Submit"
        android:backgroundTint="#FF122E"
        android:padding="16dp"
        android:minHeight="48dp" />

</LinearLayout>
